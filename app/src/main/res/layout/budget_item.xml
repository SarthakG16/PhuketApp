<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/budget_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:padding="8dp">

        <TextView
            android:id="@+id/budget_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Lunch at Saizeriya"
            android:textColor="@android:color/black"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/budget_item_sgd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_item_name"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="SGD: "
            android:textColor="@android:color/black"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/budget_item_thb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/budget_item_sgd"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/budget_item_sgd"
            android:layout_toRightOf="@+id/budget_item_sgd"
            android:text="THB: "
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/budget_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_item_sgd"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Paid:"
            android:textColor="@android:color/black"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="14sp"
            />





        <TextView
            android:id="@+id/budget_item_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budget_item_date"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Paid:"
            android:textColor="@android:color/black"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/minor_button"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>
</android.support.v7.widget.CardView>